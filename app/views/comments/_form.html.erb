<%= render 'shared/comment_error_messages' %>
<%
  form_props = {
    content: @comment.content,
    actionPath: @comment.id == nil ? "#{post_path(@post)}/comments" : post_comment_path(@comment.post, @comment),
    authenticityToken: form_authenticity_token,
    method: @comment.id == nil ? "post" : "patch"
  }
%>
<%= react_component("CommentForm", props: form_props, prerender: false) %>
