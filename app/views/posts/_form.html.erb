<%= form_for(@post) do |form| %>
  
  <%= render 'shared/post_error_messages' %>

  <%= form.label :title %> <br>
  <%= form.text_field :title, placeholder: "Type the post title here" %> <br>

  <%= form.label :content %> <br>
  <%= form.text_area :content, size: "60x12", placeholder: "Type the post text here" %> <br>

  <%= form.submit %>
<% end %>
