<%= render 'shared/post_error_messages' %>
<% 
  form_props = {
    title: @post.title,
    content: @post.content,
    actionPath: @post.id == nil ? "/posts" : post_path(@post),
    authenticityToken: form_authenticity_token,
    method: @post.id == nil ? "post" : "patch"
  }
%>
<%= react_component("PostForm", props: form_props, prerender: false) %>
